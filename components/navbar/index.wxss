/* components/navbar/index.wxss */

.navbar {
  position: relative;
  height: 160rpx;
  width: 100%;
  background-color: #AA0100;
  color: #fff;
}

.nav-wrap {
  position: absolute;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
}

.nav-icon, .nav-title  {
  display: inline-block;
  padding-left: 40rpx;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

.login-view {
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #AA0100;
  justify-content: space-between;
}

.btn-sign-in, .btn-sign-up {
  display: inline-block;
  color: #fff;
  padding: 10rpx 80rpx;
  font-size: 30rpx;
}